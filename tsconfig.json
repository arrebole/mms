{
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "ES2019",

    "outDir": "./dist",
    "baseUrl": "./src",

    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  
    "allowSyntheticDefaultImports": true,
    "incremental": true
  },

  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "**/*spec.ts"
  ]
}
