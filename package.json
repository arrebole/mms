    "test:e2e": "jest ./test ./test/env-setup.ts",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix"
  },
  "keywords": [],
  "author": "arrebole",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.21.1",
